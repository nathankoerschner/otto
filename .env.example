# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=otto
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_SECRET_MANAGER_ENABLED=false

# Slack Configuration
# Single app used across all tenants
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_APP_TOKEN=xapp-your-app-token

# Local Development: Direct tokens (when GCP_SECRET_MANAGER_ENABLED=false)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
ASANA_API_TOKEN=your-asana-personal-access-token

# Google Sheets Configuration
# Service account for accessing tenant-provided sheets
SHEETS_SERVICE_ACCOUNT_EMAIL=otto-bot@your-project.iam.gserviceaccount.com
SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Asana Configuration
ASANA_WEBHOOK_SECRET=your_webhook_secret

# Bot Configuration
BOT_EMAIL_DOMAIN=otto.example.com

# Test Tenant Configuration (for local development seed)
TEST_SLACK_WORKSPACE_ID=T1234567890
TEST_ASANA_WORKSPACE_ID=W9876543210
TEST_ASANA_BOT_USER_ID=A1111111111
TEST_GSHEET_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID
TEST_ADMIN_SLACK_USER_ID=U0987654321

# Production Tenant Configuration (for db:seed:prod)
# These are used when NODE_ENV=production
# Note: Secret names reference GCP Secret Manager, not actual tokens
TENANT_NAME=Your Organization
TENANT_SLACK_WORKSPACE_ID=T0XXXXXXX
TENANT_ASANA_WORKSPACE_ID=1234567890
TENANT_ASANA_BOT_USER_ID=1234567890
TENANT_GSHEET_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID
TENANT_ADMIN_SLACK_USER_ID=U0XXXXXXX
# Optional: override default secret names if needed
# TENANT_SLACK_BOT_TOKEN_SECRET_NAME=slack-bot-token
# TENANT_ASANA_API_TOKEN_SECRET_NAME=asana-api-token
